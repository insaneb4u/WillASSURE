@if (ViewBag.Message == "Verified")
{
    <script>$(document).ready(function () {


            $("#btnRoleDataUpdate").on("click", function () { });

            $("#btnRoleDataUpdate").click(); //trigger event after listening to it.




        });</script>

}

    <script>

        $(document).ready(function () {

           
            getDataForUpdate();



        });

        function getDataForUpdate() {
            var data = $("#getid").val();
            $.ajax({

                type: "POST",
                url: "@Url.Action("getdynamicfields", "UpdateMainAssets")",
                data: {"send":""+data+""},
                success: function (data) {
                    $("#bindata").empty().append(data);
                }


            });


        }



    </script>
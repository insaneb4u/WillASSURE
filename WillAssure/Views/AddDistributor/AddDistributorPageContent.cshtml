        var value = $(this).children(":selected").attr("value");
        var text = $("#ddlstate option:selected").html();

        $("#statetext").val(text);
        $("#stateid").val(value);



         $.ajax({

            type: "POST",
            url: "@Url.Action("OnChangeBindCity", "AddDistributor")",
            data: { "send": "" + value+  ""},

@model WillAssure.Models.TestatorFormModel


@{
                /**/

                ViewBag.Title = "AddTestatorPageContent";
}



@*Main Content*@
<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row pt-2 pb-2">

            <div class="col-sm-3">
                <div class="btn-group float-sm-right">

                    <div class="dropdown-menu">
                        <a href="javaScript:void();" class="dropdown-item">Action</a>
                        <a href="javaScript:void();" class="dropdown-item">Another action</a>
                        <a href="javaScript:void();" class="dropdown-item">Something else here</a>
                        <div class="dropdown-divider"></div>
                        <a href="javaScript:void();" class="dropdown-item">Separated link</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Breadcrumb-->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title text-primary">Add Testators Details</div>
                        <hr>
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "PopUp", id = "TestatorForm" }))
                        {
                            <div class="row">
                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">First Name</label>

                                        @Html.TextBoxFor(m => m.First_Name, new { @class = "form-control validate[required] text-input", @id = "txtFirstName", @placeholder = "Enter First Name", @autocomplete = "off" })
                                    </div>
                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Last Name</label>

                                        @Html.TextBoxFor(m => m.Last_Name, new { @class = "form-control validate[required] text-input", @id = "txtLastName", @placeholder = "Enter Last Name", @autocomplete = "off" })
                                    </div>
                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Middle Name</label>

                                        @Html.TextBoxFor(m => m.Middle_Name, new { @class = "form-control validate[required] text-input", @id = "txtmiddlename", @placeholder = "Enter Middle Name", @autocomplete = "off" })
                                    </div>
                                </div>


                                <div class="col-sm-3">

                                    <div class="form-group">
                                        <label for="input-1">Date Of Birth</label>

                                        <div id="datepicker" class="input-group date" data-date-format="dd-mm-yyyy">
                                            <input class="form-control validate[required]" type="text" id="DOB" name="DOB" autocomplete="off" placeholder="Select Date Of Birth" />
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Occupation</label>

                                        @Html.TextBoxFor(m => m.Occupation, new { @class = "form-control validate[required] text-input", @id = "txtoccupation", @placeholder = "Enter Occupation", @autocomplete = "off" })
                                    </div>
                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Mobile</label>

                                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control validate[required,custom[integer],maxSize[10]]text - input", @id = "txtmobile", @placeholder = "Enter Mobile Number", @autocomplete = "off" })
                                    </div>
                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Email</label>

                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control validate[required,custom[email]] text-input", @id = "txtEmail", @placeholder = "Enter Email", @autocomplete = "off" })
                                    </div>
                                </div>


                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="input-3">Marital Status</label>
                                        @Html.DropDownListFor(x => x.Gendertext, new SelectListItem[]{
                                        new SelectListItem() {Text = "--Select--", Value="0"},
                                       new SelectListItem() {Text = "Married", Value="1"},
                                        new SelectListItem() {Text = "UnMarried", Value="2"}}, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Religion</label>
                                        @Html.DropDownListFor(x => x.Religiontext, new SelectListItem[]{
                                 new SelectListItem() {Text = "--Select--", Value="0"},
                                 new SelectListItem() {Text = "Buddhism", Value="1"},
                                 new SelectListItem() {Text = "Christians", Value="2"},
                                 new SelectListItem() {Text = "Hinduism", Value="3"},
                                 new SelectListItem() {Text = "Islam", Value="4"},
                                 new SelectListItem() {Text = "Jainism", Value="5"},
                                 new SelectListItem() {Text = "Sikhism", Value="6"},
                                 new SelectListItem() {Text = "Zoroastrian", Value="7"},
                                 new SelectListItem() {Text = "Guru Nanak Dev", Value="8"},
                                 new SelectListItem() {Text = "Lord Mahavira", Value="9"},
                                 new SelectListItem() {Text = "Adi Shankaracharya", Value="10"}}, new { @class = "form-control" })




                                    </div>
                                </div>


                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="input-3">Identity Proof</label>
                                        @Html.DropDownListFor(x => x.Identity_Proof, new SelectListItem[]{
                                   new SelectListItem() {Text = "--Select Identity Proof--", Value="0"},
                                   new SelectListItem() {Text = "Aadhaar Card", Value="1"},
                                   new SelectListItem() {Text = "Passport", Value="2"},
                                   new SelectListItem() {Text = "Driving Licences", Value="3"},
                                   new SelectListItem() {Text = "Pan Card", Value="4"}} , new { @class="form-control" , @onchange= "getIdentityselection(this.options[this.selectedIndex].innerHTML)" })

                                    </div>
                                </div>



                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="input-3">Identity Proof Number</label>
                                        <div id="appendtxt">  @Html.TextBoxFor(m => m.Identity_Proof, new { @class = "form-control validate[required] text-input", @id = "txtAdharCard", @placeholder = "Enter Aadhaar Card", @autocomplete = "off" })</div>

                                        @*@Html.TextBoxFor(m => m.Identity_Proof_Value, new { @class = "form-control validate[required] text-input", @id = "txtIdentityProofValue", @placeholder = "Enter Identity Proof Value", @autocomplete = "off" })*@
                                    </div>
                                </div>

                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Alt Identity Proof</label>

                                        @Html.TextBoxFor(m => m.Alt_Identity_Proof, new { @class = "form-control  text-input", @id = "txtAltIdentityProof", @placeholder = "Enter Alt Identity Proof", @autocomplete = "off" })
                                    </div>
                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Alt Identity proof Value</label>

                                        @Html.TextBoxFor(m => m.Alt_Identity_proof_Value, new { @class = "form-control  text-input", @id = "txtAltIdentityproofValue", @placeholder = "Enter Alt Identity proof Value", @autocomplete = "off" })
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="input-3">Gender</label>
                                        @Html.DropDownListFor(x => x.Gendertext, new SelectListItem[]{
                                        new SelectListItem() {Text = "--Select--", Value="0"},
                                        new SelectListItem() {Text = "Male", Value="1"},
                                        new SelectListItem() {Text = "Female", Value="2"},
                                        new SelectListItem() {Text = "Transgender", Value="3"}}, new { @class = "form-control" })
                                    </div>
                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Address 1</label>

                                        @Html.TextAreaFor(m => m.Address1, new { @class = "form-control validate[required] text-input", @id = "txtaddress1", @placeholder = "Enter Address 1", @autocomplete = "off" })
                                    </div>
                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Address 2</label>

                                        @Html.TextAreaFor(m => m.Address2, new { @class = "form-control validate[required] text-input", @id = "txtaddress2", @placeholder = "Enter Address 2", @autocomplete = "off" })
                                    </div>
                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Address 3</label>

                                        @Html.TextAreaFor(m => m.Address3, new { @class = "form-control validate[required] text-input", @id = "txtaddress3", @placeholder = "Enter Address 3", @autocomplete = "off" })
                                    </div>
                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Country</label>
                                        <select id="ddlcountry" class="form-control">
                                            <option value="0">--Select Country--</option>
                                        </select>
                                        @Html.HiddenFor(m => m.countryid, new { id = "countryid" })
                                        @Html.HiddenFor(m => m.countrytext, new { id = "countrytext" })

                                    </div>

                                </div>


                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">State</label>

                                        <select id="ddlstate" class="form-control">
                                            <option value="0">--Select State--</option>
                                        </select>
                                        @Html.HiddenFor(m => m.stateid, new { id = "stateid" })
                                        @Html.HiddenFor(m => m.statetext, new { id = "statetext" })
                                    </div>
                                </div>




                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">City</label>
                                        <select id="ddlcity" class="form-control">
                                            <option value="0">--Select City--</option>
                                        </select>
                                        @Html.HiddenFor(m => m.cityid, new { id = "cityid" })
                                        @Html.HiddenFor(m => m.citytext, new { id = "citytext" })

                                    </div>

                                </div>







                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-1">Pin</label>

                                        @Html.TextBoxFor(m => m.Pin, new { @class = "form-control validate[required] text-input", @id = "txtComanyName", @placeholder = "Enter Company Name", @autocomplete = "off" })
                                    </div>
                                </div>

                                <div class="col-sm-6">

                                    <div class="form-group">
                                        <label for="input-3">Status</label>
                                        @Html.DropDownListFor(x => x.active, new SelectListItem[]{
                                       new SelectListItem() {Text = "--Select--", Value="0"},
                                       new SelectListItem() {Text = "Active", Value="1"},
                                       new SelectListItem() {Text = "Inactive", Value="2"}}, new { @class = "form-control" })
                                    </div>
                                </div>












                            </div>


                            <hr>
                            <div class="row">
                                <div class="col-sm-3">

                                    <label style="line-height:41px;">Document Created By</label>


                                </div>

                                <div class="col-sm-3">
                                    @Html.DropDownListFor(x => x.Document_Created_By, new SelectListItem[]{
                                     new SelectListItem() {Text = "--Select--", Value="0"},
                                     new SelectListItem() {Text = "Distributor", Value="1"},
                                     new SelectListItem() {Text = "Testator", Value="2"}}, new { @class = "form-control" , @id="ddldocumentcreatedby" })

                                    @Html.HiddenFor(m => m.Document_Created_By_ID, new { id = "Document_Created_By_ID" })
                                    @Html.HiddenFor(m => m.Document_Created_By_txt, new { id = "Document_Created_By_txt" })

                                </div>



                                <div class="col-sm-3">

                                    <label style="line-height:41px;">Amount Paid By</label>


                                </div>

                                <div class="col-sm-3">
                                    @Html.DropDownListFor(x => x.Amt_Paid_By, new SelectListItem[]{
                                    new SelectListItem() {Text = "--Select--", Value="0"},
                                    new SelectListItem() {Text = "Distributor", Value="1"},
                                    new SelectListItem() {Text = "Testator", Value="2"}}, new { @class = "form-control" , id= "DDLAmtPaidBY" })

                                    @Html.HiddenFor(m => m.Amt_Paid_By_By_ID, new { id = "Amt_Paid_By_By_ID" })
                                    @Html.HiddenFor(m => m.Amt_Paid_By_txt, new { id = "Amt_Paid_By_txt" })


                                </div>
                            </div>

                            <hr>






                            <div class="form-group">
                                <button type="submit" id="alert-success" formaction="InsertTestatorFormData" class="btn btn-primary shadow-primary px-5"><i class="icon-lock"></i>Add Testator</button>
                                <button type="button" style="display:none;" id="ADDTestatorFormData" class="btn btn-primary shadow-primary px-5"><i class="icon-lock"></i></button>
                            </div>
                        }
                    </div>
                </div>
            </div>


        </div>


    </div>


</div>
@*end*@

